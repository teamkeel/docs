{
  "scopeName": "source.keel",
  "patterns": [
    {
      "include": "#comment"
    },
    {
      "include": "#literal"
    },
    {
      "include": "#message-definition"
    },
    {
      "include": "#keyword"
    },
    {
      "include": "#operator"
    },
    {
      "include": "#action-type"
    },
    {
      "include": "#action-name"
    },
    {
      "include": "#type-name"
    },
    {
      "include": "#identitifer"
    },
    {
      "include": "#attribute-name"
    },
    {
      "include": "#fields-block"
    }
  ],
  "repository": {
    "comment": {
      "name": "comment",
      "match": "//.*"
    },
    "keyword": {
      "name": "keyword.keel",
      "match": "\\b(model|fields|actions|enum|api|models|job|role|emails|domains|inputs|with|returns)\\s+"
    },
    "operator": {
      "name": "keyword.keel",
      "match": "(and|or|not|in|!=|==|>=|<=|>|<)\\s+"
    },
    "action-type": {
      "name": "keyword.keel",
      "match": "\\b(get|create|update|list|delete|read|write)\\s+"
    },
    "action-name": {
      "name": "support.function.action.keel",
      "match": "(?<=get |create |update |list |delete |read |write )\\s*\\w+"
    },
    "type-name": {
      "name": "entity.name.type.keel",
      "match": "[A-Z][a-zA-Z0-9\\.]*(\\?|\\[\\])?"
    },
    "identitifer": {
      "name": "variable.field.keel",
      "match": "[a-z][a-zA-Z0-9\\.]*\\??"
    },
    "attribute-name": {
      "name": "support.function.attribute.name.keel",
      "match": "@[a-zA-Z]+"
    },
    "fields-block": {
      "name": "block.fields.keel",
      "comment": "fields block inside a model or inputs in a job",
      "begin": "(?<=fields |inputs )\\s*{",
      "patterns": [
        {
          "include": "#field"
        }
      ],
      "end": "\\s*}"
    },
    "field": {
      "comment": "model fields, message fields, and job inputs",
      "patterns": [
        {
          "include": "#comment"
        },
        {
          "include": "#literal"
        },
        {
          "include": "#identitifer"
        },
        {
          "include": "#type-name"
        },
        {
          "include": "#attribute-name"
        },
        {
          "begin": "\\s+{",
          "patterns": [
            {
              "include": "#field"
            }
          ],
          "end": "\\s*}"
        }
      ]
    },
    "message-definition": {
      "name": "message.keel",
      "begin": "(message)\\s+([A-Z][a-zA-Z]*)\\s+{",
      "beginCaptures": {
        "1": {
          "name": "keyword.keel"
        },
        "2": {
          "name": "entity.name.type.keel"
        }
      },
      "patterns": [
        {
          "include": "#field"
        }
      ],
      "end": "\\s*}"
    },
    "literal": {
      "name": "literal.keel",
      "patterns": [
        {
          "include": "#string-literal"
        },
        {
          "include": "#number"
        },
        {
          "include": "#boolean"
        }
      ]
    },
    "string-literal": {
      "name": "string.quoted.double.keel",
      "match": "\".*?\""
    },
    "number": {
      "name": "constant.numeric.keel",
      "match": "\\d+"
    },
    "boolean": {
      "name": "constant.language.boolean.keel",
      "match": "\\b(true|false)\\b"
    }
  }
}
